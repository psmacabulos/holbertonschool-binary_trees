{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run 0-node",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-pedantic",
        "-std=gnu89",
        "binary_tree_print.c",
        "main.c",
        "0-binary_tree_node.c",
        "-o",
        "0-node",
        "&&",
        "./0-node"
      ],
      "options": {
        "shell": {
          "executable": "/usr/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}